FROM python:3.10-slim

WORKDIR /app

RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    netcat-openbsd \
    && rm -rf /var/lib/apt/lists/*

# Podstawowe zależności dla testów + minimalne ML (bez LLM)
RUN pip install --no-cache-dir \
    pytest \
    pytest-cov \
    pytest-html \
    pytest-timeout \
    requests \
    colorama \
    faker \
    lorem \
    numpy \
    scikit-learn \
    python-dotenv

COPY *.py .

# Dodaj ścieżkę dla importów
ENV PYTHONPATH=/app

CMD ["pytest", "-v", "--cov=.", "--cov-report=html:test-results/coverage", "--html=test-results/report.html", "--self-contained-html"]
