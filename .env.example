# ============================================
# .env.example - Przykładowy plik zmiennych środowiskowych
# ============================================
# Email Configuration
EMAIL_ADDRESS=test@localhost
EMAIL_PASSWORD=testpass123

# Server Configuration
IMAP_SERVER=dovecot
SMTP_SERVER=mailhog
IMAP_PORT=143
SMTP_PORT=1025
SMTP_HOST=mailhog

# Drafts (Email Responder)
# Używane przez email_responder.py do zapisywania wersji roboczych
# Typowy dla Dovecot: INBOX.Drafts. Dostosuj do swojego serwera.
DRAFTS_FOLDER=INBOX.Drafts

# Email Signature (Email Responder)
# Używane w generowanych odpowiedziach
SENDER_NAME=Tom Sapletta
SENDER_TITLE=Devops Engineer
SENDER_COMPANY=Prototypowanie.pl
SIGNATURE=Z poważaniem,\n{SENDER_NAME}\n{SENDER_TITLE}\n{SENDER_COMPANY}

# Conversation History (Email Responder)
# Liczba wcześniejszych wiadomości do uwzględnienia w kontekście (domyślnie: 3)
CONVERSATION_HISTORY_LIMIT=3

# Model Configuration
MODEL_NAME=Qwen/Qwen2.5-7B-Instruct
DEVICE=cpu

# Test Configuration
NUM_EMAILS=50
SPAM_RATIO=0.2
TEST_LIMIT=100
LIMIT=100
TEMPERATURE=0.7
# MAX_TOKENS: recommended 500-1024 for GPU (7-8B models), auto-clamped to 1024 on GPU if higher
MAX_TOKENS=500
SINCE_DAYS=7
SINCE_DATE=

# Categorization
SIMILARITY_THRESHOLD=0.25
MIN_CLUSTER_SIZE=2
MIN_CLUSTER_FRACTION=0.10

# Vectorizer
TFIDF_MAX_FEATURES=100
STOPWORDS=none  # none|english

# Content sufficiency thresholds for categorization
CONTENT_MIN_CHARS=40
CONTENT_MIN_TOKENS=6

# Cross-folder spam similarity
CROSS_SPAM_SIMILARITY=0.6
CROSS_SPAM_SAMPLE_LIMIT=200

# Category matching (reuse existing folders)
CATEGORY_MATCH_SIMILARITY=0.5
CATEGORY_SENDER_WEIGHT=0.2
CATEGORY_SAMPLE_LIMIT=50

# Cleanup empty Category* folders on startup
CLEANUP_EMPTY_CATEGORY_FOLDERS=true

# Paths
MODELS_PATH=./models
LOGS_PATH=./logs
REPORTS_PATH=./reports

# Logging & dry-run
LOG_LEVEL=INFO
DRY_RUN=false
